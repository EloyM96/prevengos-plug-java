# syntax=docker/dockerfile:1

FROM gradle:8.6.0-jdk17 AS build
WORKDIR /workspace
COPY . .
RUN gradle :modules:hub-backend:bootJar --no-daemon -x test

FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /workspace/modules/hub-backend/build/libs/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
